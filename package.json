{
  "name": "terje-js",
  "version": "2.3.0",
  "repository": "github.com/navikt/terje",
  "license": "MIT",
  "dependencies": {
    "@kubernetes/client-node": "^0.6.0",
    "@microsoft/microsoft-graph-client": "^1.3.0",
    "adal-node": "^0.1.28",
    "express": "^4.16.4",
    "pino": "^5.8.0",
    "prom-client": "^11.1.3",
    "redux": "^4.0.1",
    "redux-saga": "^0.16.2"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.5",
    "@types/pino": "^5.20.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.6.0",
    "jest": "^23.5.0",
    "ts-jest": "^23.10.4",
    "typescript": "^3.1.3"
  },
  "scripts": {
    "start": "node ./build/app.js",
    "debug": "node --inspect ./build/app.js",
    "build": "tsc",
    "test": "jest",
    "clean": "rm -rf ./build && mkdir ./build",
    "build-image": "docker build -t navikt/terje:local ."
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
